{
    "output": "DP-1",
    // "mode": "dock",
    "layer": "top",
    "position": "bottom",
    "height": 30,
    "spacing": 4,
    "gtk-layer-shell": true,
    "modules-left": ["hyprland/workspaces", "custom/media", "cava"],
    "modules-center": ["wlr/taskbar"],
    "modules-right": ["keyboard-state", "tray", "idle_inhibitor", "battery", "network", "custom/weather", "pulseaudio", "clock"],
    // Modules configuration
    "hyprland/workspaces": {
      "all-outputs": false,
      "format": "{icon}",
      "format-icons": {
        "active": "ÔÜí",
        "default": "ÔÑë"
      },
      "persistent-workspaces": {
        "1": ["DP-1"],
        "2": ["DP-1"],
        "3": ["DP-1"],
        "4": ["DP-1"]
      }
    },
    "keyboard-state": {
        "numlock": false,
        "capslock": true,
        "format": "{icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": ""
        }
    },
    "cava": {
       // "cava_config": "$HOME/.config/cava/config",
        "framerate": 165,
        "autosens": 1,
        // "sensitivity": 100,
        "bars": 14,
        "lower_cutoff_freq": 50,
        "higher_cutoff_freq": 10000,
        "method": "pipewire",
        "source": "auto",
        "stereo": true,
        "reverse": false,
        "bar_delimiter": 0,
        "monstercat": false,
        "waves": false,
        "noise_reduction": 0.77,
        "input_delay": 2,
        "format-icons" : ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà" ],
        "actions": {
          "on-click-right": "mode"
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-alt": "test",
        "format-icons": {
            "activated": "Û∞Ö∂",
            "deactivated": "Û∞æ´"
        }
    },
    "tray": {
        "spacing": 4,
        "icon-size": 14
        // "show-passive-items": true
    },
    "clock": {
        "format": "Û∞ôπ {:%A, %b %d %I:%M %p}",
        "on-click": "xdg-open https://calendar.google.com",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode"          : "month",
            "mode-mon-col"  : 3,
            "on-scroll"     : 1,
            "on-click-right": "mode",
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions":  {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "battery": {
        "bat": "hidpp_battery_0",
        "states": {
            "full": 100,
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-good": "",
        "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet": "Û∞àÄ",
        "tooltip-format": "{gwaddr} via {ifname}",
        "format-linked": "{ifname} (No IP) Û∞àÄ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "Û∞àÄ {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Û∞ùü {icon}Ôäî {format_source}",
        "format-muted": "Û∞ùü{format_source}",
        "format-source": "Û∞ç¨",
        "format-source-muted": "Û∞ç≠",
        "format-icons": {
            "headphone": "Û∞ãã",
            "hifi": "Û∞ãã",
            "hdmi": "Û∞ãã",
            "default": "Unknown",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "speaker": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
            "Speakers": "asdf"
        },
        "on-click": "pavucontrol",
        "on-click-right": "helvum"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        // "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        "exec": "$HOME/.dotfiles/scripts/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/weather": {
        "format": "{}",
        "format-alt": "{alt}: {}",
        "format-alt-click": "click-right",
        "interval": 1800,
        "return-type": "json",
        "exec": "$HOME/.dotfiles/scripts/weather.sh Columbus",
        "exec-if": "ping wttr.in -c1"
    },
    "wlr/taskbar": {
      "format": "{icon}",
      "icon-size": 24,
      "icon-theme": "Numix-Circle",
      "tooltip-format": "{title}",
      "on-click": "activate",
      "on-click-middle": "close",
      // "ignore-list": [
      //    "Alacritty"
      // ],
      "app_ids-mapping": {
        "firefoxdeveloperedition": "firefox-developer-edition"
      },
      "rewrite": {
          "Firefox Web Browser": "Firefox",
          "Foot Server": "Terminal"
      }
    }
}
