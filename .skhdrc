# Terminal
cmd - return : /Applications/Alacritty.app/Contents/MacOS/alacritty &> /dev/null

# Navigation
fn - h : yabai -m window --focus west
fn - j : yabai -m window --focus south
fn - k : yabai -m window --focus north
fn - l : yabai -m window --focus east

# ctrl - h : yabai -m window --focus west
# ctrl - j : yabai -m window --focus south
# ctrl - k : yabai -m window --focus north
# ctrl - l : yabai -m window --focus east

# Moving Windows
fn + shift - h : yabai -m window --warp west
fn + shift - j : yabai -m window --warp south
fn + shift - k : yabai -m window --warp north
fn + shift - l : yabai -m window --warp east

ctrl + shift - h : yabai -m window --warp west
ctrl + shift - j : yabai -m window --warp south
ctrl + shift - k : yabai -m window --warp north
ctrl + shift - l : yabai -m window --warp east

# Move Windows to Workspace
cmd + shift - 1 : yabai -m window --space  1 && yabai -m space --focus 1
cmd + shift - 2 : yabai -m window --space  2 && yabai -m space --focus 2
cmd + shift - 3 : yabai -m window --space  3 && yabai -m space --focus 3
cmd + shift - 4 : yabai -m window --space  4 && yabai -m space --focus 4
cmd + shift - 5 : yabai -m window --space  5 && yabai -m space --focus 5
cmd + shift - 6 : yabai -m window --space  6 && yabai -m space --focus 6
cmd + shift - 7 : yabai -m window --space  7 && yabai -m space --focus 7
cmd + shift - 8 : yabai -m window --space  8 && yabai -m space --focus 8
cmd + shift - 9 : yabai -m window --space  9 && yabai -m space --focus 9
cmd + shift - 0 : yabai -m window --space 10 && yabai -m space --focus 10

# Move Windows to Monitor
ctrl + shift - 1 : yabai -m window --display 1 && yabai -m display --focus 1
ctrl + shift - 2 : yabai -m window --display 2 && yabai -m display --focus 2
ctrl + shift - 3 : yabai -m window --display 3 && yabai -m display --focus 3
ctrl + shift - 4 : yabai -m window --display 4 && yabai -m display --focus 4

# Focus Workspace
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9
cmd - 0 : yabai -m space --focus 10

# Increase Window Size
cmd + shift - h : yabai -m window --resize left:-20:0
cmd + shift - j : yabai -m window --resize bottom:0:20
cmd + shift - k : yabai -m window --resize top:0:-20
cmd + shift - l : yabai -m window --resize right:20:0

# Toggle float for window
ctrl + shift - f : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2
fn + shift - f : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2
